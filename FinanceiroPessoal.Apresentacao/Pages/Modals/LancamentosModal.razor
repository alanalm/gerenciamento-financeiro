@using FinanceiroPessoal.Apresentacao.ViewModels
@inject IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" Class="mb-2">@Titulo</MudText>

        <MudTable Items="Lancamentos" Dense="true" Hover="true" Striped="true">
            <HeaderContent>
                <MudTh>Descrição</MudTh>
                <MudTh>Categoria</MudTh>
                <MudTh>Valor</MudTh>
                <MudTh>Data</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd>@context.Descricao</MudTd>
                <MudTd>@context.CategoriaNome</MudTd>
                <MudTd>@context.Valor.ToString("C")</MudTd>
                <MudTd>@context.Data</MudTd>
            </RowTemplate>
        </MudTable>
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Text" OnClick="@(() => MudDialog.Close(DialogResult.Ok(true)))">Fechar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public string Titulo { get; set; } = "Lançamentos";
    [Parameter] public List<LancamentoViewModel> Lancamentos { get; set; } = new();
}
