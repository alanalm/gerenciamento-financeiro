@using MudBlazor
@using Microsoft.AspNetCore.Components

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">@Titulo</MudText>
    </TitleContent>

    <DialogContent>
        <MudText>@Mensagem</MudText>
    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="Cancelar">@BotaoCancelar</MudButton>
        <MudButton Color="@CorBotaoConfirmar" Variant="Variant.Filled" OnClick="Confirmar">@BotaoConfirmar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    // Parâmetros "oficiais"
    [Parameter] public string Titulo { get; set; } = "Confirmação";
    [Parameter] public string Mensagem { get; set; } = string.Empty;
    [Parameter] public string BotaoConfirmar { get; set; } = "Sim";
    [Parameter] public string BotaoCancelar { get; set; } = "Cancelar";
    [Parameter] public Color CorBotaoConfirmar { get; set; } = MudBlazor.Color.Error;

    // ALIAS: aceitar nomes de parâmetros alternativos (compatibilidade)
    [Parameter] public string ContentText { set { if (!string.IsNullOrEmpty(value)) Mensagem = value; } }
    [Parameter] public string ButtonText { set { if (!string.IsNullOrEmpty(value)) BotaoConfirmar = value; } }
    [Parameter] public Color? Color { set { if (value.HasValue) CorBotaoConfirmar = value.Value; } }
    [Parameter] public string Message { set { if (!string.IsNullOrEmpty(value)) Mensagem = value; } }

    private void Confirmar() => MudDialog.Close(DialogResult.Ok(true));
    private void Cancelar() => MudDialog.Cancel();
}
